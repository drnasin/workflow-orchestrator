{
  "name": "drnasin/workflow-orchestrator",
  "description": "A lightweight, stateless workflow orchestration library for PHP",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "workflow",
    "orchestration",
    "async",
    "messaging"
  ],
  "authors": [
    {
      "name": "Ante Drnasin",
      "email": "ante@drnasin.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "psr/container": "^2.0",
    "ext-pdo": "*"
  },
  "suggest": {
    "ext-redis": "Required for RedisQueue functionality"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "WorkflowOrchestrator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WorkflowOrchestrator\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
